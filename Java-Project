pipeline{
   agent none
   stages {
      stage('Git checkout'){
	    agent { label 'node2' }
         steps{
		    git 'https://github.com/manoj98007/java-code.git'
		    echo "Checkout is successfull"
		
	    }  		
	}
	   stage('Build'){
	    agent { label 'node2' }
         steps{
		    sh 'maven clean install'
            echo "Build is successfull"		 
		}  
	}
	   stage('Deploy war file to tomcat'){
	    agent { label 'node2' }
		 steps{
		    sh 'sudo cp /opt/jenkins/workspace/target/*.war /opt/apache-tomcat-9.0.65/webapps'
	        echo "Deploy is successfull"   
		}
    }
	    stage('Testing'){
		 agent { label 'node2'}
          steps{
		    echo "Test is successfull"  
		}
	} 
  }
}
