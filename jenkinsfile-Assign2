pipeline {
    agent any
    stages {
            stage('ALL') {
                parallel {
                    
                    stage('Testing1') {
                        when {
                         branch 'master'
                        }
                        steps {
                           echo "this is build stage"
                         }
                     
                    }
                    stage('Testing2') {
                        when {
                         branch 'master'
                        }
                        steps { 
                          echo "this is deploy stage"
                      }
                    }
                }
                
            }
    }
        
 }