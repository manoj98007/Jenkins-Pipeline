pipeline {
    agent any
    stages {
        stage('TESTING') {
            when {
                branch 'main'
            }
            parallel {
                stage('TESTING1') {
                    agent { label 'master' } 
                    steps {
                        sh 'echo "This is a Testing1 stage"'
                       
                    }
                }
                stage('TESTING2') {
                    agent { label 'master' } 
                    steps {
                        sh '''
                            echo "This is a Testing2 stage"                        
                        '''
                    }
                }
            }  
        }
    }
}